<div class="row" id="header-top">
	<div class="span12">
		<div class="row">
			<div class="span3">
				<div id="logo"><%= link_to 'DEFINE.IO', :index_path %></div>
			</div>
			<div class="span7" id="nav">
				<div class="navbar">
					<ul class="nav">
						<li><a href="/news">NEWS</a></li>
						<li><a href="/products">PRODUCTS</a></li>
						<li><a href="#">FORUMS</a></li>
					</ul>
					<% if user_signed_in? %>
					<ul class="nav pull-right" id="account">
						<li><%= link_to current_user.name, edit_user_registration_path %></a></li>
						<li><%= link_to 'Logout', destroy_user_session_path, :method => :delete %><li>
					</ul>
					<% else %>
					<ul class="nav pull-right">
						<li><%= link_to 'REGISTER', :registration_path %></li>
						<li id="sign_in_li"><%= link_to 'SIGN IN', new_user_session_path %></li>
						<div id="sign_in_div">
							<%= form_for(:user, :url  => user_session_path) do |f| %>
							<%= f.text_field :email, :placeholder => "Email", :cols => 10 %>
							<%= f.password_field :password, :placeholder => "Password" %>
							<div id="sign_in_button"><%= f.submit "Sign in", :class => "btn btn-primary" %></div>
							<% end %>
						</div>
					<% end %>
				</div>
			</div>
		</div>
	</div>
</div>