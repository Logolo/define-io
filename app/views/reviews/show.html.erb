<div class="row">
  <div class="span10" id="review_body">
    <div id="review_title">
      <h2><%= @review.title %>, by <%= @review.user.name %></h2>
    </div>
    <div id="review_content">
      <%= @review.content %>
      <%= @review.attributes %>
    </div>
    <div id="review_vote">
    <% if voted_on_review?(@review) == false %>
      <h3><%= link_to '⬆', vote_up_product_review_path(:review_id => @review.id), 
                                                     :class => "vote_up",
                                                     :id => "vote_up", 
                                                     :method => :put, 
                                                     :remote => true %>
      <h3><%= link_to '⬇', vote_down_product_review_path(:review_id => @review.id), 
                                                     :class => "vote_down",
                                                     :id => "vote_down", 
                                                     :method => :put, 
                                                     :remote => true %>
      <% else %>
        You have already voted.<br />
      <% end %>
    </div>
    <div id="review_score">
      <h3>Score: <%= @review.rating %></h3>
    </div>
  </div>
</div>