<div class="row" id="update_blocks">
	<div class="block">
		<b>LATEST NEWS</b>
	</div>
	<div class="block">
		<b>LATEST PRODUCTS</b><br />
		<div class="latest_products">
		<% @latest_products.each do |product| %>
			<%= link_to(product.name, product) %><br />
		<% end %>
		</div>
	</div>
	<div class="block">
		<b>ACTIVE THREADS</b>
	</div>
</div>
<div class="row">
	<div class="span6 offset2" id="newest_reviews">
		<div id="reviews_within">
				Products within last: <a class="active" href="#" id="7" value="7">7</a>
				<a href="#" id="14" value="14">14</a>
				<a href="#" id="30" value="30">30</a>
				<a href="#" id="90" value="90">90</a>
				<script>
					$(document).ready(function() {
						console.log(gon.products);
						var loadData = function(time_within) {
							$("#products").html("<h4>" + gon.products + "</h4>");
							_.each(gon.products, function(product) {
								$("#products").html("<h4>" + product.name+ "</h4>");
							});
						};

						$("#reviews_within").each(function() {
							$("a").click(function(clicked) {
								if($(this).hasClass("active")) {
									$(this).removeClass("active");
								} else {
									$(this).addClass("active");
								}
								loadData(30);
							});
						});
					});
				</script>
		</div>
		<%= content_tag "div", :id => "products", :data => {:products => @products} do %>
			<h3>Products:</h3>
		<% end %>
	</div>
</div>